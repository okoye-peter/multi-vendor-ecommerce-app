{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.ts",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "npm run prisma:generate && tsc",
        "start": "node dist/server.js",
        "start:prod": "NODE_ENV=production node dist/server.js",
        "postbuild:disabled": "npm run prisma:deploy",
        "prisma:combine": "node --import tsx scripts/combine-schemas.mjs",
        "prisma:generate": "npm run prisma:combine && prisma generate",
        "prisma:migrate": "npm run prisma:combine && prisma migrate dev",
        "prisma:migrate:create": "npm run prisma:combine && prisma migrate dev --create-only",
        "prisma:deploy": "npm run prisma:combine && prisma migrate deploy",
        "prisma:seed": "node --import tsx prisma/seeders/index.ts",
        "prisma:push": "npm run prisma:combine && npx prisma db push"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "dependencies": {
        "@bull-board/api": "^6.14.0",
        "@bull-board/express": "^6.14.0",
        "@prisma/adapter-pg": "^7.0.1",
        "@prisma/client": "^7.0.1",
        "@prisma/driver-adapter-utils": "^7.0.1",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.62.2",
        "cloudinary": "^2.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "exceljs": "^4.4.0",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "express-useragent": "^2.0.2",
        "helmet": "^8.1.0",
        "ioredis": "^5.8.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.9",
        "pg": "^8.16.3",
        "prisma": "^7.0.1",
        "sharp": "^0.34.5",
        "winston": "^3.18.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
